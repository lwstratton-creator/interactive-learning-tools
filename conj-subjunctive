<script>
// Track completed exercises
let completedExercises = {
    1: false,
    2: false,
    3: false,
    4: false
};

// Correct answers
const correctAnswers = {
    'correction-1': 'gane',
    'correction-2': 'cometa',
    'correction-3': 'pierda',
    'correction-4': 'gane'
};

function updateProgress() {
    // Count completed exercises
    const completedCount = Object.values(completedExercises).filter(value => value).length;
    const totalExercises = Object.keys(completedExercises).length;
    
    // Calculate percentage
    const percentage = (completedCount / totalExercises) * 100;
    
    // Move the soccer ball
    document.getElementById('soccer-ball').style.left = `${percentage}%`;
}

function checkAnswer(inputId) {
    const input = document.getElementById(inputId);
    const userAnswer = input.value.trim().toLowerCase();
    const correctAnswer = correctAnswers[inputId].toLowerCase();
    const questionNumber = inputId.split('-')[1];
    
    if (!userAnswer) {
        return false; // Skip empty inputs
    }
    
    const isCorrect = userAnswer === correctAnswer;
    
    if (isCorrect) {
        input.classList.add('correct');
        input.classList.remove('incorrect');
        completedExercises[questionNumber] = true;
        updateProgress();
        return true;
    } else {
        input.classList.add('incorrect');
        input.classList.remove('correct');
        setTimeout(() => {
            input.classList.remove('incorrect');
        }, 2000);
        return false;
    }
}

function checkAllAnswers() {
    // Check if any inputs are empty
    let allFilled = true;
    let allCorrect = true;
    let correctCount = 0;
    
    for (let i = 1; i <= 4; i++) {
        const inputId = `correction-${i}`;
        const input = document.getElementById(inputId);
        
        if (!input.value.trim()) {
            allFilled = false;
            input.classList.add('incorrect');
            setTimeout(() => {
                input.classList.remove('incorrect');
            }, 2000);
            continue;
        }
        
        const isCorrect = checkAnswer(inputId);
        if (isCorrect) {
            correctCount++;
        } else {
            allCorrect = false;
        }
    }
    
    if (!allFilled) {
        alert("Please fill in all the correction fields.");
        return;
    }
    
    if (allCorrect) {
        document.getElementById('celebration').classList.add('show');
    } else {
        alert(`You have ${correctCount} out of 4 correct answers. Try again!`);
    }
}

// Initialize
document.addEventListener('DOMContentLoaded', () => {
    // Initialize progress visual
    updateProgress();
    
    // Add Enter key support
    document.querySelectorAll('.correction-input').forEach(input => {
        input.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                checkAnswer(input.id);
                
                // Find next input to focus
                const currentId = parseInt(input.id.split('-')[1]);
                if (currentId < 4) {
                    const nextInput = document.getElementById(`correction-${currentId + 1}`);
                    if (nextInput) nextInput.focus();
                } else {
                    // If last input, check all answers
                    checkAllAnswers();
                }
            }
        });
        
        // Clear incorrect styling when typing
        input.addEventListener('input', () => {
            input.classList.remove('incorrect');
        });
    });
});
</script>
</body>
</html>
