<script>
// Helper Functions
function insertAccent(inputId, accent) {
    const input = document.getElementById(inputId);
    const cursorPos = input.selectionStart;
    const textBefore = input.value.substring(0, cursorPos);
    const textAfter = input.value.substring(cursorPos);
    
    input.value = textBefore + accent + textAfter;
    input.focus();
    input.setSelectionRange(cursorPos + 1, cursorPos + 1);
}

function createHintButton(hintText) {
    const hintContainer = document.createElement('div');
    hintContainer.className = 'hint-container';

    const button = document.createElement('button');
    button.className = 'hint-icon';
    button.textContent = '?';
    button.setAttribute('aria-label', 'Show hint');
    button.setAttribute('type', 'button');

    const hintContent = document.createElement('div');
    hintContent.className = 'hint-content';
    hintContent.setAttribute('role', 'tooltip');
    hintContent.id = `hint-${Math.random().toString(36).substr(2, 9)}`;
    hintContent.textContent = hintText;

    button.setAttribute('aria-describedby', hintContent.id);
    button.setAttribute('aria-expanded', 'false');

    button.addEventListener('click', () => {
        const isExpanded = button.getAttribute('aria-expanded') === 'true';
        button.setAttribute('aria-expanded', !isExpanded);
        if (!isExpanded) {
            hintContent.style.visibility = 'visible';
            hintContent.style.opacity = '1';
        } else {
            hintContent.style.visibility = 'hidden';
            hintContent.style.opacity = '0';
        }
    });

    hintContainer.appendChild(button);
    hintContainer.appendChild(hintContent);

    return hintContainer;
}

function normalizeString(str) {
    return str.trim().toLowerCase().replace(/\s+/g, ' ');
}

// Check answers for each exercise
function checkAnswer(exerciseId) {
    let inputId = 'input-' + exerciseId;
    let feedbackId = 'feedback-' + exerciseId;
    
    const input = document.getElementById(inputId);
    const userAnswer = input.value.trim().toLowerCase();
    const feedback = document.getElementById(feedbackId);
    
    // Remove existing hint if present
    const existingHint = input.parentNode.querySelector('.hint-container');
    if (existingHint) {
        existingHint.remove();
    }
    
    let correctAnswers = [];
    let hintMessage = "";
    
    // Set correct answers and hint messages based on exercise
    switch(exerciseId) {
        case 'a':
            correctAnswers = [
                'antes de la dictadura, ellos se hab√≠an convertido en funcionarios',
                'ellos se hab√≠an convertido en funcionarios antes de la dictadura'
            ];
            hintMessage = "Remember to use the reflexive pronoun 'se' + 'hab√≠an' + past participle 'convertido'";
            break;
        case 'b1':
            correctAnswers = [
                'hab√≠an jugado',
                'mis hermanos hab√≠an jugado'
            ];
            hintMessage = "The past participle of 'jugar' is 'jugado' and you need to use 'hab√≠an' (not 'han') for pluscuamperfecto";
            break;
        case 'b2':
            correctAnswers = [
                'hab√≠an visto',
                'ellos hab√≠an visto'
            ];
            hintMessage = "The past participle of 'ver' is 'visto' (not 'viendo' which is the gerund)";
            break;
        case 'b3':
            correctAnswers = [
                'hab√≠an visto',
                'ellos hab√≠an visto',
                'ellos los hab√≠an visto'
            ];
            hintMessage = "Similar to the previous sentence, you need 'hab√≠an' + 'visto'";
            break;
        case 'b4':
            correctAnswers = [
                'hab√≠an entrenado',
                'ellos no hab√≠an entrenado'
            ];
            hintMessage = "The past participle of 'entrenar' is 'entrenado' and you need to use the negative form with 'no hab√≠an'";
            break;
    }
    
    // Check if answer is correct
    let isCorrect = false;
    for (let correctAnswer of correctAnswers) {
        if (userAnswer.includes(normalizeString(correctAnswer))) {
            isCorrect = true;
            break;
        }
    }
    
    if (isCorrect) {
        input.classList.add('correct');
        input.classList.remove('incorrect');
        
        feedback.textContent = "¬°Correcto! That's the right form of the pluscuamperfecto.";
        feedback.classList.add('success');
        feedback.classList.remove('error');
        feedback.style.display = "block";
        
        // Update progress
        if (exerciseId === 'a') {
            document.getElementById('step1').classList.add('completed');
        } else if (exerciseId.startsWith('b')) {
            // Check if all B exercises are completed
            const bInputs = ['input-b1', 'input-b2', 'input-b3', 'input-b4'];
            const allBCompleted = bInputs.every(id => document.getElementById(id).classList.contains('correct'));
            
            if (allBCompleted) {
                document.getElementById('step2').classList.add('completed');
            }
        }
    } else {
        input.classList.add('incorrect');
        input.classList.remove('correct');
        
        // Generate more generic hint messages that don't give away the answers
        switch(exerciseId) {
            case 'a':
                hintMessage = "Consider what happens with reflexive verbs in the pluscuamperfecto tense";
                break;
            case 'b1':
                hintMessage = "Remember the correct auxiliary verb form for pluscuamperfecto";
                break;
            case 'b2':
                hintMessage = "Check the correct form of the past participle for this verb";
                break;
            case 'b3':
                hintMessage = "This requires the same form of the verb as in the previous sentence";
                break;
            case 'b4':
                hintMessage = "Consider how to form the negative in pluscuamperfecto";
                break;
        }
        
        // Create and add hint button
        const hintButton = createHintButton(hintMessage);
        input.parentNode.insertBefore(hintButton, input.nextSibling);
        
        feedback.textContent = "Try again. Check the verb tense and form.";
        feedback.classList.add('error');
        feedback.classList.remove('success');
        feedback.style.display = "block";
    }
}

// Add event listeners
document.addEventListener('DOMContentLoaded', () => {
    // Enter key support for all inputs
    const inputIds = ['input-a', 'input-b1', 'input-b2', 'input-b3', 'input-b4'];
    
    inputIds.forEach(inputId => {
        const input = document.getElementById(inputId);
        
        // Add Enter key support
        input.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                // Extract exercise ID from input ID
                const exerciseId = inputId.replace('input-', '');
                checkAnswer(exerciseId);
            }
        });
        
        // Clear styling on input change
        input.addEventListener('input', function() {
            this.classList.remove('correct', 'incorrect');
            
            // Get the feedback element
            const exerciseId = inputId.replace('input-', '');
            const feedbackId = 'feedback-' + exerciseId;
            const feedback = document.getElementById(feedbackId);
            if (feedback) {
                feedback.style.display = 'none';
            }
            
            // Remove existing hint if present
            const existingHint = this.parentNode.querySelector('.hint-container');
            if (existingHint) {
                existingHint.remove();
            }
        });
    });
});
</script>
</body>
</html>
