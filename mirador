    <script>
        // Use IIFE to scope all variables and functions to avoid global conflicts
        (function() {
            let miradorSlideIndex = 1;
            
            // Function to initialize the slideshow
            function initMiradorSlideshow() {
                showMiradorSlides(miradorSlideIndex);
                
                // Add keyboard event listener for navigation
                document.addEventListener('keydown', function(e) {
                    // Only respond to keyboard events if the slideshow is in the viewport
                    const slideshowElement = document.querySelector('.mirador-slideshow-container');
                    if (slideshowElement) {
                        const rect = slideshowElement.getBoundingClientRect();
                        const isInViewport = rect.top < window.innerHeight && rect.bottom >= 0;
                        
                        if (isInViewport) {
                            if (e.key === 'ArrowLeft') {
                                miradorChangeSlide(-1);
                            } else if (e.key === 'ArrowRight') {
                                miradorChangeSlide(1);
                            }
                        }
                    }
                });
            }
            
            // Next/previous controls function
            window.miradorChangeSlide = function(n) {
                showMiradorSlides(miradorSlideIndex += n);
            }
            
            // Thumbnail image controls function
            window.miradorCurrentSlide = function(n) {
                showMiradorSlides(miradorSlideIndex = n);
            }
            
            // Attribution toggle function
            window.toggleMiradorAttribution = function() {
                const attributionContent = document.getElementById('miradorAttributionContent');
                const button = document.querySelector('.mirador-attribution-toggle');
                const isExpanded = attributionContent.classList.contains('expanded');
                
                if (isExpanded) {
                    attributionContent.classList.remove('expanded');
                    button.innerHTML = '<span aria-hidden="true">📸</span> View Image Sources';
                    button.setAttribute('aria-expanded', 'false');
                } else {
                    attributionContent.classList.add('expanded');
                    button.innerHTML = '<span aria-hidden="true">📸</span> Hide Image Sources';
                    button.setAttribute('aria-expanded', 'true');
                }
            }
            
            // Function to display the current slide
            function showMiradorSlides(n) {
                let i;
                let slides = document.getElementsByClassName("mirador-mySlides");
                let dots = document.getElementsByClassName("mirador-dot");
                
                // Loop back to the first slide if at the end
                if (n > slides.length) {miradorSlideIndex = 1}
                
                // Go to the last slide if going back from the first slide
                if (n < 1) {miradorSlideIndex = slides.length}
                
                // Hide all slides
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                
                // Remove active class from all dots
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" mirador-active-dot", "");
                }
                
                // Show the current slide and activate the corresponding dot
                if (slides[miradorSlideIndex-1]) {
                    slides[miradorSlideIndex-1].style.display = "block";
                }
                if (dots[miradorSlideIndex-1]) {
                    dots[miradorSlideIndex-1].className += " mirador-active-dot";
                }
            }
            
            // Initialize the slideshow when the content is loaded
            if (document.readyState === 'complete' || document.readyState === 'interactive') {
                initMiradorSlideshow();
            } else {
                document.addEventListener('DOMContentLoaded', initMiradorSlideshow);
            }
        })();
    </script>
</body>
