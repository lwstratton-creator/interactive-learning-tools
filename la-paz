    <script>
        // Use IIFE to scope all variables and functions to avoid global conflicts
        (function() {
            let lapazSlideIndex = 1;
            
            // Function to initialize the slideshow
            function initLapazSlideshow() {
                showLapazSlides(lapazSlideIndex);
                
                // Add keyboard event listener for navigation
                document.addEventListener('keydown', function(e) {
                    // Only respond to keyboard events if the slideshow is in the viewport
                    const slideshowElement = document.querySelector('.lapaz-slideshow-container');
                    if (slideshowElement) {
                        const rect = slideshowElement.getBoundingClientRect();
                        const isInViewport = rect.top < window.innerHeight && rect.bottom >= 0;
                        
                        if (isInViewport) {
                            if (e.key === 'ArrowLeft') {
                                lapazChangeSlide(-1);
                            } else if (e.key === 'ArrowRight') {
                                lapazChangeSlide(1);
                            }
                        }
                    }
                });
            }
            
            // Next/previous controls function
            window.lapazChangeSlide = function(n) {
                showLapazSlides(lapazSlideIndex += n);
            }
            
            // Thumbnail image controls function
            window.lapazCurrentSlide = function(n) {
                showLapazSlides(lapazSlideIndex = n);
            }
            
            // Attribution toggle function
            window.toggleLapazAttribution = function() {
                const attributionContent = document.getElementById('lapazAttributionContent');
                const button = document.querySelector('.lapaz-attribution-toggle');
                const isExpanded = attributionContent.classList.contains('expanded');
                
                if (isExpanded) {
                    attributionContent.classList.remove('expanded');
                    button.innerHTML = '<span aria-hidden="true">üì∏</span> View Image Sources';
                    button.setAttribute('aria-expanded', 'false');
                } else {
                    attributionContent.classList.add('expanded');
                    button.innerHTML = '<span aria-hidden="true">üì∏</span> Hide Image Sources';
                    button.setAttribute('aria-expanded', 'true');
                }
            }
            
            // Function to display the current slide
            function showLapazSlides(n) {
                let i;
                let slides = document.getElementsByClassName("lapaz-mySlides");
                let dots = document.getElementsByClassName("lapaz-dot");
                
                // Loop back to the first slide if at the end
                if (n > slides.length) {lapazSlideIndex = 1}
                
                // Go to the last slide if going back from the first slide
                if (n < 1) {lapazSlideIndex = slides.length}
                
                // Hide all slides
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                
                // Remove active class from all dots
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" lapaz-active-dot", "");
                }
                
                // Show the current slide and activate the corresponding dot
                if (slides[lapazSlideIndex-1]) {
                    slides[lapazSlideIndex-1].style.display = "block";
                }
                if (dots[lapazSlideIndex-1]) {
                    dots[lapazSlideIndex-1].className += " lapaz-active-dot";
                }
            }
            
            // Initialize the slideshow when the content is loaded
            if (document.readyState === 'complete' || document.readyState === 'interactive') {
                initLapazSlideshow();
            } else {
                document.addEventListener('DOMContentLoaded', initLapazSlideshow);
            }
        })();
    </script>
</body>
